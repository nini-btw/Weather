Doctype
  html(lang='en')
  meta(charset='UTF-8')
  title weather
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@700&family=Roboto&family=Work+Sans:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  link(href='style.css' rel='stylesheet')
body
  .container
    .weather
      header
        .location
          <i class="fa-solid fa-location-dot"></i>
          input(type='text' placeholder='Location' list='dl')
          datalist#dl
        .search
          <button class="fa-solid fa-magnifying-glass"></button>
      main.hide
        .display
          img(src='images/clear.png')
        .deg 
          p 40&deg
        .description Clear
      footer.hide
        .humidity
          <i class="fa-solid fa-water"></i>
          .text
            .value
              p 10%
            .title Humidity
        .wind
          <i class="fa-solid fa-wind"></i>
          .text
            .value
              p 15Km/h
            .title Wind speed
  script(src='main.js')
